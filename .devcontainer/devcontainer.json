{
	"build": {
		"dockerfile": "Dockerfile"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"github.copilot-nightly"
			]
		}
	},
	"forwardPorts": [
		3000
	],
	"mounts": ["source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"],
	"postCreateCommand": "yarn",
	"runArgs": ["--init", "--privileged"]
}